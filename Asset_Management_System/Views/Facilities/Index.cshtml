@model IEnumerable<Asset_Management_System.Models.AssetManagementSystem.Facility>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if ((String) Session["IsAdmin"] == "True")
{
    <p>
        @Html.ActionLink("Add new Facility", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="/Facilities/Resources/@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @if ((String) Session["IsAdmin"] == "True")
            {
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) @: |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) @:|
                @Html.ActionLink("Delete", "Delete", new {id = item.Id}) @:|
                @Html.ActionLink("Resources", "Resources", new {id = item.Id}) 
            }
            else
            {
                @Html.ActionLink("Details", "Details", new {id = item.Id}) @:|
                @Html.ActionLink("Resources", "Resources", new {id = item.Id})
            }

        </td>
    </tr>
}
</table>
